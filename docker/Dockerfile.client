# CertDeliver Client
# Lightweight image for certificate synchronization

FROM python:3.12-slim

WORKDIR /app

# Install the package
COPY pyproject.toml .
COPY src/ src/
COPY README.md .

RUN pip install --no-cache-dir .

# Create directories
RUN mkdir -p /var/cache/certdeliver /etc/ssl/certs/certdeliver

# Run client
CMD ["certdeliver-client"]
